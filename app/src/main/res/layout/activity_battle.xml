        app:srcCompat="@drawable/sword3030" />

    <ImageView
        android:id="@+id/enemyImage8"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/sword3030"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/enemyImage9"
        app:layout_constraintStart_toEndOf="@+id/enemyImage7"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sword3030" />

    <ImageView
        android:id="@+id/enemyImage9"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/sword3030"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/enemyImage10"
