<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    tools:context=".BattleActivity">


    <Button

        android:id="@+id/attackButton"
        android:layout_width="135dp"
        android:layout_height="53dp"
        android:layout_marginTop="568dp"
        android:onClick="playerAttack"
        android:text="Attack!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.148"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button

        android:id="@+id/defenseButton"
        android:layout_width="135dp"
        android:layout_height="53dp"
        android:layout_marginTop="568dp"
        android:layout_marginEnd="55dp"
        android:onClick="playerDefend"
        android:text="Defend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/slimeImage"
        android:layout_width="99dp"
        android:layout_height="171dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="16dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/slime" />

    <ImageView
        android:id="@+id/goblinImage"
        android:layout_width="99dp"
        android:layout_height="169dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="16dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/goblin" />

    <ImageView
        android:id="@+id/basicKnight"
        android:layout_width="114dp"
        android:layout_height="182dp"
        android:layout_marginTop="125dp"
        android:contentDescription="TODO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/basicknight" />


    <TextView
        android:id="@+id/damageTextView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="54dp"
        app:layout_constraintBottom_toTopOf="@id/goblinImage"
        app:layout_constraintEnd_toEndOf="parent" />


    <ScrollView
        android:layout_width="408dp"
        android:layout_height="107dp"
        app:layout_constraintBottom_toTopOf="@id/attackButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.978">

        <TextView
            android:id="@+id/battle_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="18sp" />
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>