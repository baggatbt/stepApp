<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestActivity">

    <Button
        android:id="@+id/firstQuestButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="395dp"
        android:onClick="useSteps"
        android:text="First Quest"
        app:layout_constraintBottom_toTopOf="@+id/backToMainButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/backToMainButton"
        android:layout_width="109dp"
        android:layout_height="0dp"
        android:layout_marginStart="148dp"
        android:layout_marginBottom="49dp"
        android:onClick="backToMain"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstQuestButton" />

</androidx.constraintlayout.widget.ConstraintLayout>