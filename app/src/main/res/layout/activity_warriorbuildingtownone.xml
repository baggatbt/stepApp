<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WarriorBuildingTownOneActivity">

    <Button
        android:id="@+id/trainingButton"
        android:layout_width="116dp"
        android:layout_height="80dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="259dp"
        android:text="Training"
        android:onClick="startTraining"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/stepsToGo"
        android:layout_width="75dp"
        android:layout_height="49dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="156dp"
        android:text="500"
        android:visibility="invisible"
        android:textColor="@color/black"
        android:textSize="37sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/backToMainButton"
        android:layout_width="102dp"
        android:layout_height="71dp"
        android:layout_marginStart="152dp"
        android:layout_marginBottom="49dp"
        android:text="Back"
        android:onClick="backToTown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.985" />

    <Button
        android:id="@+id/testBattleBtn"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginTop="424dp"
        android:text="Battle One"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>